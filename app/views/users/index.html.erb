<h1>All Users</h1>
<%= will_paginate  @users %>
<div class="row">
	<div class="col-6-mid">
<ul class="list-group">
	<% @users.each do |user| %>
  <li class="list-group-item d-flex justify-content-between align-items-center">
  	<%= load_image user %>
    <%=user.name %>
    <span class="badge badge-primary badge-pill"><%=user.email %></span>
    <%  if current_user.admin? && current_user != user %>
    <%= link_to("delete" , user_path(user), method: :delete, data: {confirm: 'Are you sure?' }) %>
    <% end %>
  </li>
  <% end %>
</ul>
</div>
</div>
<%= will_paginate @users %>