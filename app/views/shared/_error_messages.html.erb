<% if !!@user %>
<% object =@user %>
<%  else %>
<%  object=@micropost%>
<% end %>
<% if object.errors.any? %>
	<div>
		<div class="alert alert-danger">
			The form contains <%= pluralize(object.errors.count, 
			"error" ) %>
		<ul>
			<% object.errors.full_messages.each do |msg| %>
			<li> <%= msg %>></li>
			<% end %>
		</ul>
		</div>
	</div>
<% end %>
